<!doctype html>
<html>
  <head>
    <title>Film Ratings -  <%=webName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h4 class = "maintitle"> The <%=webName%></h4>
    
        
        <nav class="main-nav">
    
            <% if (isLoggedIn) { %>
                <div class="login-message-container">
                  <span class="login-message"><%= loginMessage %></span>
                  <a href="/logout">Logout</a>
                </div>
              <% } else { %>
                <div class="login-message-container">
                  <a href="/login">Login</a>
                </div>
              <% } %>
    
            <ul class = "nav-links">
                <li><a href='/'>Home</a></li>
                <li><a href="about">About</a></li>
                <li><a href="register">Register </a></li>
                <li><a href="/ratings">Ratings</a></li>
                <li><a href="/forum">Forum</a></li>
            </ul>
            <div class="search-container">
                <form action="/search-result" method="GET">
                  <input id="search-box" type="text" name="keyword" placeholder="Search for a User">
                  <input type="submit" value="Search">
                </form>
              </div>
          </nav>
        
    
    
       



    <div class="container">
      <% movies.forEach(function(movie) { %>
          <div class="movie">
              <div class="movie-image"></div>
              <div class="movie-title"><%= movie.title %></div>
              <div class="movie-rating"> Rotten Tomato Rating: <%= movie.tomatometer %></div>
          </div>
      <% }) %>
  </div>
  </body>
</html>