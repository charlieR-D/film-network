<!doctype html>
<html>
  <head>
    <title>Forum <%=webName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Forum <%=webName%></h1>

    <p>Welcome to the Film Network 
    </p>

    <p><a href="about">About <%=webName%></a></p>
    <p><a href="search">Search for books</a></p>
    <p><a href="register">Register with us</a></p>
    <p><a href="deleteuser">Delete user</a></p>
    <p><a href="/ratings">Ratings</a></p>
    <p><a href="/forum">Forum</a></p>
    <p><a href="/reviews">Reviews</a></p>




    <% if (loginMessage) { %>
        <p><%= loginMessage %></p>
        <p><a href="/logout">Logout</a></p>
    <% } else { %>
        <p><a href="/login">Login</a></p>
    <% } %>
    


<!-- Display forum posts -->
<% posts.forEach(function(post) { %>
    <div class="forum-post">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <p>Posted by: <%= post.username %> at <%= post.created_at %></p>

        <!-- Display comments for this post -->
        <h3>Comments</h3>
        <ul>
            <% if (post.comments && post.comments.length > 0) { %>
                <% post.comments.forEach(function(comment) { %>
                    <li><%= comment.comment_content %> - Commented by <%= comment.comment_username %> at <%= comment.comment_created_at %></li>
                <% }); %>
            <% } else { %>
                <li>No comments yet.</li>
            <% } %>
        </ul>

        <!-- Comment Submission Form -->
        <form action="/comment" method="post">
            <input type="hidden" name="postId" value="<%= post.id %>">
            <label for="commentContent">Add a comment:</label>
            <textarea id="commentContent" name="commentContent" rows="4" cols="50" required></textarea>
            <button type="submit">Submit Comment</button>
        </form>

    </div>
<% }); %>

<!-- Link to submit a new post -->
<a href="/forum/new">Submit a New Post</a>
